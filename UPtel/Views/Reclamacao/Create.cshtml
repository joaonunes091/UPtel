@model UPtel.Models.ReclamacaoViewModel

@{
    ViewData["Title"] = "Create";

}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">
                <h1 class="font">Enviar Reclamação</h1>
                <br />
                <div class="row">
                    <div class="col-md-10">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="@Model.Assunto" class="control-label"></label>
                                <input asp-for="@Model.Assunto" class="form-control" />
                                <span asp-validation-for="@Model.Assunto" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Descricao" class="control-label"></label>
                                <textarea rows="3" asp-for="@Model.Descricao" class="form-control"> </textarea>
                                <span asp-validation-for="@Model.Descricao" class="text-danger"></span>
                            </div>


                            <div class="form-group d-flex justify-content-between">
                                <button type="submit" class="btn btn-default btn-sm "><i title="Guardar" class="far fa-plus-square fa-2x"></i></button>
                                <a asp-action="Index" asp-controller="ClientesViewModel"><i title="Voltar" class="far fa-caret-square-left fa-2x"> &nbsp </i></a>
                            </div>
                        </form>
                    </div>
                </div>               
            </div>
        </div>
    </div>
</section>
