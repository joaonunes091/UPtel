@model UPtel.Models.Reclamacao

@{
    ViewData["Title"] = "Delete";
}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">
                <h1>Delete</h1>

                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <h4>Reclamacao</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.Assunto)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Assunto)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.Descriçao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Descriçao)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.NomeCliente)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.NomeCliente)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.ResolvidoOperador)
                        </dt>
                       
                            @if (Model.ResolvidoOperador == true)
                            {
                            <dd class="col-sm-7">
                                Sim
                            </dd>
                            }
                            else
                            {
                                <dd class="col-sm-7">
                                    Não
                                </dd>
                            }
                            
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.ResolvidoCliente)
                            </dt>
                            
                                @if (Model.ResolvidoCliente == true)
                                {
                                <dd class="col-sm-7">
                                    Sim
                                </dd>
                                }
                                else
                                {
                                    <dd class="col-sm-7">
                                        Não
                                    </dd>
                                }
                              
                            </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ReclamacaoId" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>