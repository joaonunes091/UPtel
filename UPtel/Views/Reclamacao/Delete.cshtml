@model UPtel.Models.Reclamacao

@{
    ViewData["Title"] = "Delete";
}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">
              
                <h2 class="font">Tem a certeza que quer eliminar esta reclamação?</h2>
                <br />
                <div>
                    <br />
                    <dl class="row justify-content-center text-white">
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.NomeCliente)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.NomeCliente)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.Assunto)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Assunto)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.ResolvidoOperador)
                        </dt>

                        @if (Model.ResolvidoOperador == true)
                        {
                            <dd class="col-sm-7">
                                Sim
                            </dd>
                        }
                        else
                        {
                            <dd class="col-sm-7">
                                Não
                            </dd>
                        }

                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.ResolvidoCliente)
                        </dt>

                        @if (Model.ResolvidoCliente == true)
                        {
                            <dd class="col-sm-7">
                                Sim
                            </dd>
                        }
                        else
                        {
                            <dd class="col-sm-7">
                                Não
                            </dd>
                        }

                    </dl>

                    <form class="d-flex justify-content-sm-between align-content-center col-10" asp-action="Delete">
                        <input type="hidden" asp-for="ReclamacaoId" />
                        <button type="submit" class="btn btn-default btn-sm "><i title="Eliminar" class="far fa-trash-alt fa-2x imgEliminar"></i></button>
                        <a asp-action="Index" asp-route-id="@Model.ReclamacaoId"><i title="Voltar" class="far fa-arrow-alt-circle-left fa-2x"></i></a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>