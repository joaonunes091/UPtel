@model UPtel.Models.Reclamacao

@{
    ViewData["Title"] = "Details";
}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">
                <h1>Details</h1>

                <div>
                    <h4>Reclamacao</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.NomeCliente)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.NomeCliente)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.Assunto)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Assunto)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.ResolvidoOperador)
                        </dt>

                        @if (Model.ResolvidoOperador == true)
                        {
                            <dd class="col-sm-7">
                                Sim
                            </dd>
                        }
                        else
                        {
                            <dd class="col-sm-7">
                                Não
                            </dd>
                        }

                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.ResolvidoCliente)
                        </dt>

                        @if (Model.ResolvidoCliente == true)
                        {
                            <dd class="col-sm-7">
                                Sim
                            </dd>
                        }
                        else
                        {
                            <dd class="col-sm-7">
                                Não
                            </dd>
                        }

                    </dl>
                </div>
                <div class="float-right">
                    <a asp-action="Edit" asp-route-id="@Model.ReclamacaoId"><i title="Editar" class="far fa-edit fa-2x"> &nbsp </i></a> 
                    <a asp-action="Index"><i title="Voltar" class="far fa-caret-square-left fa-2x"> &nbsp </i></a>
                </div>
            </div>
        </div>
    </div>
</section>