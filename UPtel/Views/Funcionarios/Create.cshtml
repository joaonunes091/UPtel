@model UPtel.Models.Funcionarios

@{
    ViewData["Title"] = "Create";
}

<style>
    .btn-costum {
        background-color: #00b371;
        color: white;
        border-color: #009961;
    }

    .btn-costum:hover {
        background-color: #009961;
        color: white;
        border-color: #009961;
    }

</style>

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">

                <h1>Novo Funcionário</h1>


                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="NomeFuncionario" class="control-label">Nome do funcionário *</label>
                                <input asp-for="NomeFuncionario" class="form-control" />
                                <span asp-validation-for="NomeFuncionario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CargoId" class="control-label"></label>
                                <select asp-for="CargoId" class="form-control" asp-items="ViewBag.CargoId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="DataNascimento" class="control-label">Data de nascimento *</label>
                                <input asp-for="DataNascimento" class="form-control" />
                                <span asp-validation-for="DataNascimento" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Contribuinte" class="control-label">Número de contribuinte *</label>
                                <input asp-for="Contribuinte" class="form-control" />
                                <span asp-validation-for="Contribuinte" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Morada" class="control-label">Morada *</label>
                                <input asp-for="Morada" class="form-control" />
                                <span asp-validation-for="Morada" class="text-danger"></span>
                            </div>
                            <div class="form-row">
                                <label asp-for="CodigoPostal" class="control-label">Código Postal *</label>
                            </div>
                            <div class="form-row">
                                <div class="col-md-4">
                                    <input asp-for="CodigoPostal" class="form-control" />
                                    <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                                </div>
                                -
                                <div class="col-md-4">
                                    <input asp-for="CodigoPostalExt" class="form-control" />
                                    <span asp-validation-for="CodigoPostalExt" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label">Email *</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Telemovel" class="control-label">Telemovel *</label>
                                <input asp-for="Telemovel" class="form-control" />
                                <span asp-validation-for="Telemovel" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CartaoCidadao" class="control-label">Cartão de cidadão *</label>
                                <input asp-for="CartaoCidadao" class="form-control" />
                                <span asp-validation-for="CartaoCidadao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Iban" class="control-label">IBAN *</label>
                                <input asp-for="Iban" class="form-control" />
                                <span asp-validation-for="Iban" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label">Password *</label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EstadoFuncionario" class="control-label">Estado do funcionário *</label>
                                <input asp-for="EstadoFuncionario" class="form-control" />
                                <span asp-validation-for="EstadoFuncionario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CodigoPostalExt" class="control-label"></label>
                                <input asp-for="CodigoPostalExt" class="form-control" />
                                <span asp-validation-for="CodigoPostalExt" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="ficheiroFoto" class="control-label">Fotografia</label>
                                <input name="ficheiroFoto" class="form-control-file" type="file" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-costum" />
                            </div>
                        </form>
                    </div>
                </div>
                <div>
                    <a>Os campos marcados com * são de preenchimento obrigatório</a>
                </div>

                <div>
                    <a class="btn btn-outline-dark" asp-action="Index">Voltar</a>
                </div>

                @*@section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }*@
            </div>
        </div>
    </div>  
</section>