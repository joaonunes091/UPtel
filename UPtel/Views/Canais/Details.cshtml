@model UPtel.Models.Canais

@{
    ViewData["Title"] = "Detalhes dos canais";
}


<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left text-white">
            <div class="col-xl-8">
                <h2>Detalhes dos canais</h2>
                <hr />
                <div class="row">
                    <div class="col-md-5">
                        <dl>
                            <dt class="text-white">
                                @Html.DisplayNameFor(model => model.NomeCanal)
                            </dt>
                            <dd class="text-white">
                                @Html.DisplayFor(model => model.NomeCanal)
                            </dd>
                            <dt class="text-white">
                                @Html.DisplayNameFor(model => model.PrecoCanais)
                            </dt>
                            <dd class="text-white">
                                @Html.DisplayFor(model => model.PrecoCanais)
                            </dd>
                        </dl>
                    </div>

                    <div class="col-md-7">
                        @if (Model.Foto != null)
                        {
                            <img src="data:image/jpeg;base64, @Convert.ToBase64String(Model.Foto)" class="img-fluid" style="width:50px;" />
                        }
                    </div>
                </div>
                <div class="text-center">
                    <a class="btn btn-costum" asp-action="Edit" asp-route-id="@Model.CanaisId">Editar</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.CanaisId">Eliminar</a> |
                    <a class="btn btn-info" asp-action="Index">Voltar</a>
                </div>

            </div>
        </div>
    </div>
</section>