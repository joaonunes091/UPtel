@model UPtel.Models.Canais

@{
    ViewData["Title"] = "Detalhes dos canais";
}




<section id="secondhero" >
    <div class="container">
        <div class="row justify-content-center text-white">  
                <h2 class="font">Detalhes do canal</h2>
                <br /><br />
                <div >
                    <div >
                        <dl class="row">
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.NomeCanal)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.NomeCanal)
                            </dd>
                        </dl>
                    </div>

                    <div class="col-md-7"> 
                        @if (Model.Foto != null)
                        {
                            <img src="data:image/jpeg;base64, @Convert.ToBase64String(Model.Foto)" class="img-fluid" style="width:50px;" />
                        }
                    </div>
                </div>
                <br />
                <div class="float-right">
                    <a asp-action="Edit" asp-route-id="@Model.CanaisId"><i title="Editar" class="far fa-edit fa-2x"> &nbsp </i></a>
                    <a asp-action="Delete" asp-route-id="@Model.CanaisId"><i title="Apagar" class="far fa-trash-alt fa-2x imgEliminar"> &nbsp </i></a>
                    <a asp-action="Index"><i title="Voltar" class="far fa-arrow-alt-circle-left fa-2x"> &nbsp </i></a>
                </div>

            </div>
        </div>
    </div>
</section>