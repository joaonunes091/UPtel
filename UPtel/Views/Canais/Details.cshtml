@model UPtel.Models.Canais

@{
    ViewData["Title"] = "Details";
}


<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">
                <div>
                    <h2>Detalhe Canais</h2>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2 text-white">
                            @Html.DisplayNameFor(model => model.NomeCanal)
                        </dt>
                        <dd class="col-sm-10 text-white">
                            @Html.DisplayFor(model => model.NomeCanal)
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    @if (Model.Foto != null)
                    {
                        <img src="data:image/jpeg;base64, @Convert.ToBase64String(Model.Foto)" class="img-fluid" />
                    }
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.CanaisId" class="btn btn-primary">Editar</a> |
                    <a asp-action="Index">Voltar</a>
                </div>

            </div>
        </div>
    </div>
</section>