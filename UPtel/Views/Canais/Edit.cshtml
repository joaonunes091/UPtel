

<style>
    input[type=file] {
        color: transparent;
    }

        input[type=file]:after {
            color: #000;
            content: "";
        }
</style>

@model UPtel.Models.Canais


@{
    ViewData["Title"] = "Edit";
}

<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">
                <h2 class="font">Editar Canal</h2>
                <br />
                <div class="row d-flex justify-content-center">
                    <div class="col-md-8 text-white">
                        <div class="d-flex justify-content-end">
                            @if (Model.Foto != null)
                            {
                                <img src="data:image/jpeg;base64, @Convert.ToBase64String(Model.Foto)" class="img-fluid" style="width:50px; height:30px" />
                            }
                            else
                            {
                                <img src="~/bootstrap/assets/img/tv-no-signal.jpg" class="img-fluid" style="width:50px;" />
                            }
                        </div>

                        <form asp-action="Edit" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="CanaisId" />
                            <br />
                            <div class="form-group">
                                <label asp-for="NomeCanal" class="control-label" style="color:darkgray">Nome do canal *</label>
                                <input asp-for="NomeCanal" class="form-control" placeholder="Ex: Rtp 1" />
                                <span asp-validation-for="NomeCanal" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <label for="ficheiroFoto" class="control-label" style="color:darkgray">Fotografia (especifique apenas caso queira alterar)</label>
                                <input name="ficheiroFoto" class="form-control-file" type="file" />
                            </div>
                            <br />
                            <div class="form-group d-flex justify-content-sm-between align-content-center">
                                <input asp-for="Foto" type="hidden" />
                                <button type="submit" class="btn btn-default btn-sm "><i title="Guardar" class="far fa-plus-square fa-3x"></i></button>
                                <a asp-action="Details" asp-route-id="@Model.CanaisId"><i title="Voltar" class="far fa-caret-square-left fa-3x"></i></a>
                            </div>
                        </form>
                        <br />
                        <div style="color:darkgray">
                            <p>* - Campos de preenchimento obrigatório</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
             @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }