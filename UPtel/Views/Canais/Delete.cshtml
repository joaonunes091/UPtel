@model UPtel.Models.Canais

@{
    ViewData["Title"] = "Eliminar canais";
}


<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8 text-white">
                <h2>Tem a certeza que quer apagar o canal?</h2>
                <div class="row">
                    <div class="col-md-4">
                        <hr />
                        <dl>
                            <dt class="text-white">
                                @Html.DisplayNameFor(model => model.NomeCanal)
                            </dt>
                            <dd class="text-white">
                                @Html.DisplayFor(model => model.NomeCanal)
                            </dd>
                            <dt class="text-white">
                                @Html.DisplayNameFor(model => model.PrecoCanais)
                            </dt>
                            <dd class="text-white">
                                @Html.DisplayFor(model => model.PrecoCanais)
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        @if (Model.Foto != null)
                        {
                            <img src="data:image/jpeg;base64, @Convert.ToBase64String(Model.Foto)" class="img-fluid" style="width:50px;" />
                        }
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CanaisId" />
                        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                        <a class="btn btn-info" asp-action="Index">Voltar</a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>
