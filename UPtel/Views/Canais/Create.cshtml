@model UPtel.Models.Canais

@{
    ViewData["Title"] = "Criar Canal";
}


<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8 text-white">
                <h2>Criar Canal</h2>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="NomeCanal" class="control-label text-white">Nome do canal *</label>
                                <input asp-for="NomeCanal" class="form-control" />
                                <span asp-validation-for="NomeCanal" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="ficheiroFoto" class="control-label text-white"></label>
                                <input name="ficheiroFoto" class="form-control-file" type="file" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Criar" class="btn btn-costum" />|
                                <a class="btn btn-info" asp-action="Index">Voltar</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-white">
                    <p>* - Campos de preenchimento obrigatório</p>
                </div>


                @*@section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }*@

            </div>
        </div>
    </div>
</section>