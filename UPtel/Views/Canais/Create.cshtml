<style>
    input[type=file] {
        color: transparent;
    }

        input[type=file]:after {
            color: #000;
            content: "";
        }
</style>

@model UPtel.Models.Canais

@{
    ViewData["Title"] = "Criar Canal";
}


<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
        <div class="col-xl-8 text-white">
            <h2 class="font">Criar Canal</h2>
            <br />
            <div class="row">
                <div class="col-md-10">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="NomeCanal" class="control-label" style="color:darkgray">Nome do canal *</label>
                            <input asp-for="NomeCanal" class="form-control" placeholder="Ex: Rtp 1" />
                            <span asp-validation-for="NomeCanal" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="ficheiroFoto" class="control-label text-white"></label>
                            <input name="ficheiroFoto" class="form-control-file" type="file" />
                        </div>
                        <div class="form-group d-flex justify-content-sm-between align-content-center">
                            <button type="submit" class="btn btn-default btn-sm "><i title="Guardar" class="fas fa-folder-plus fa-3x"></i></button>
                            <a asp-action="Index"><i title="Voltar" class="far fa-arrow-alt-circle-left fa-2x"></i></a>
                        </div>

                    </form>
                    <div style="color:darkgray">
                        <p>* - Campos de preenchimento obrigatório</p>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}