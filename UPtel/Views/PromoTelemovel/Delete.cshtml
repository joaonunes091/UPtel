                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.DecontoPrecoTotal)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Estado)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Estado)
                        </dd>
                    </dl>

                <br /><br />
                      <form class="d-flex justify-content-sm-between align-content-center col-10" asp-action="Delete">
                          <input type="hidden" asp-for="PromoTelemovelId" />
                          <button type="submit" class="btn btn-default btn-sm "><i title="Eliminar" class="far fa-trash-alt fa-2x imgEliminar"></i></button>
                          <a asp-action="Details" asp-route-id="@Model.PromoTelemovelId"><i title="Voltar" class="far fa-caret-square-left fa-2x"></i></a>
                      </form>
                </div>
            </div>
        </div>
    </div>
</section>