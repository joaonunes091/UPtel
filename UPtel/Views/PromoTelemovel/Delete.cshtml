@model UPtel.Models.PromoTelemovel

@{
    ViewData["Title"] = "Delete";
}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">
                <h2 class="font">Tem a certeza que quer eliminar a promoção?</h2>
                <br />
                <div>
                    <br />
                    <dl class="row">
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.LimiteMinutos)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.LimiteMinutos)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.LimiteSMS)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.LimiteSMS)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.DecontoPrecoMinNacional)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.DecontoPrecoMinNacional)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.DecontoPrecoMinInternacional)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.DecontoPrecoMinInternacional)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.DecontoPrecoSMS)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.DecontoPrecoSMS)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.DecontoPrecoMMS)
