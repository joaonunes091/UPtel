                                @Html.DisplayFor(modelItem => item.DecontoPrecoMinInternacional)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DecontoPrecoSMS)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DecontoPrecoMMS)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DecontoPrecoTotal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.PromoTelemovelId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.PromoTelemovelId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.PromoTelemovelId">Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>