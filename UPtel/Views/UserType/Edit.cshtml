@model UPtel.Models.UserType

@{
    ViewData["Title"] = "Edit";
}
<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8 text-white">

                <h1>Editar user type</h1>


                <hr />
                <div class="row">
                    <div class="col-md-4 text-white">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="TipoId" />
                            <div class="form-group">
                                <label asp-for="Tipo" class="control-label"></label>
                                <input asp-for="Tipo" class="form-control" />
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-costum" />
                            </div>
                        </form>
                    </div>
                </div>
                <div>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@Model.TipoId">Voltar</a>
                </div>

                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }
            </div>
        </div>  
    </div>
</section>