@model IEnumerable<UPtel.Models.UserType>

@{
    ViewData["Title"] = "Index";
}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">

                <h2 class="font">Tipo de utilizador</h2>

                <p>
                    <a asp-action="Create"><i title="Adicionar user type" class="fas fa-folder-plus fa-3x"></i></a>
                </p>

                @if (Model.Count() == 0)
                {
                    <p style="color:darkgray">Não existem serviços de televisão para mostrar</p>
                }
                else
                {
                    <table class="table table-borderless text-white">
                        <thead>
                            <tr>
                                <th class="text-left titulo">
                                    @Html.DisplayNameFor(model => model.Tipo)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-left">
                                        @Html.DisplayFor(modelItem => item.Tipo)
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.TipoId"><i title="Detalhes" class="fas fa-search-plus fa-2x"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</section>