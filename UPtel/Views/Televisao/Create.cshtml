@model UPtel.Models.TelevisaoViewModel

@{
    ViewData["Title"] = "Criar serviço de televisão";
}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 text-white">

                <h2 class="font">Criar pacote de televisão</h2>

                <br />
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="Nome" class="control-label">Nome do pacote de canais *</label>
                                <input asp-for="Nome" class="form-control" placeholder="Ex. Básico"/>
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="Descricao" class="control-label"></label>
                                <textarea rows="3" asp-for="Descricao" placeholder="Descrição" class="form-control"></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="PrecoPacoteTelevisao" class="control-label">Preço do pacote de televisão *</label>
                                <input asp-for="PrecoPacoteTelevisao" class="form-control" placeholder="Ex: 15"/>
                                <span asp-validation-for="PrecoPacoteTelevisao" class="text-danger"></span>
                            </div>
                                <dl class="row d-flex justify-content-between">
                                    @for (int i = 0; i < Model.ListaCanais.Count; i++)
                                    {
                                        <div class="row col-4" style="color:darkgray">
                                            <dt>
                                                @Html.HiddenFor(x => Model.ListaCanais[i].Id)
                                                @Html.DisplayFor(z => Model.ListaCanais[i].Nome) &nbsp
                                            </dt>
                                            <dd>
                                                @Html.CheckBoxFor(z => Model.ListaCanais[i].Selecionado)
                                            </dd>
                                        </div>
                                    }
                                </dl>
                        
                            <div class="form-group d-flex justify-content-sm-between align-content-center">
                                <button type="submit" class="btn btn-default btn-sm "><i class="fas fa-folder-plus fa-3x"></i></button>
                                <a asp-action="Index"><i class="far fa-arrow-alt-circle-left fa-2x"></i></a>
                            </div>
                        </form>
                        <div style="color:darkgray">
                            <a>Os campos marcados com * são de preenchimento obrigatório</a>
                        </div>
                    </div>
                </div>



                @*@section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }*@
            </div>
        </div>
    </div>
</section>