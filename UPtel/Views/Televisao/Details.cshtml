@model UPtel.Models.TelevisaoViewModel

@{
    ViewData["Title"] = "Detalhes do serviço da televisão";
}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center  text-white">
            <div class="col-xl-8">

                <h1 class="font">Detalhes do pacote de televisão</h1>

                <div>
                    <br />
                    <dl class="row d-flex justify-content-center text-center">
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.PrecoPacoteTelevisao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.PrecoPacoteTelevisao) €
                        </dd>
                        <dt class="col-sm-5 titulo">
                            Canais
                        </dt>
                        <dd class="col-sm-7">
                            @for (int i = 0; i < Model.ListaCanais.Count; i++)
                            {
                                @if (Model.ListaCanais[i].Selecionado == true)
                                {
                                    @Html.DisplayFor(z => Model.ListaCanais[i].Nome)
                                    <br />
                                }
                            }
                        </dd>
                    </dl>
                </div>
                @if (User.IsInRole("Administrador"))
                {
            <div class="float-right">
                <a asp-action="Edit" asp-route-id="@Model.TelevisaoId"><i class="far fa-edit fa-2x"> &nbsp </i></a>
                <a asp-action="Delete" asp-route-id="@Model.TelevisaoId"><i class="far fa-trash-alt fa-2x imgEliminar"> &nbsp </i></a>
                <a asp-action="Index"><i class="far fa-caret-square-left fa-2x"> &nbsp </i></a>
            </div>
                }
                else
                {
                    <div class="float-right">
                        <a asp-action="Index"><i class="far fa-caret-square-left fa-2x"> &nbsp </i></a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>