@model UPtel.Models.TelevisaoViewModel

@{
    ViewData["Title"] = "Editar serviço de televisão";
}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">

                <h1 class="font">Editar pacote de televisão</h1>

                <br />
                <div class="row d-flex justify-content-center">
                    <div class="col-md-8 text-white">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="TelevisaoId" />
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label" style="color:darkgray">Nome do pacote de canais *</label>
                                <input asp-for="Nome" class="form-control" placeholder="Ex: Básico"/>
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Descricao" class="control-label" style="color:darkgray"></label>
                                <textarea rows="3" asp-for="Descricao" placeholder="Descrição" class="form-control"></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PrecoPacoteTelevisao" class="control-label" style="color:darkgray">Preço do pacote de televisão *</label>
                                <input asp-for="PrecoPacoteTelevisao" class="form-control" placeholder="Ex: 15"/>
                                <span asp-validation-for="PrecoPacoteTelevisao" class="text-danger"></span>
                            </div>
                            <dl class="row justify-content-center">
                                @for (int i = 0; i < Model.ListaCanais.Count; i++)
                                {
                                    <div class="row col-4" style="color:darkgray">
                                        <dt class="row col-md-11">
                                            @Html.HiddenFor(x => Model.ListaCanais[i].Id)
                                            @Html.DisplayFor(z => Model.ListaCanais[i].Nome) &nbsp
                                        </dt>
                                        <dd class="row col-md-1 align-content-sm-center">
                                            @Html.CheckBoxFor(z => Model.ListaCanais[i].Selecionado)
                                        </dd>
                                    </div>
                                }
                            </dl>
                            <div class="form-group d-flex justify-content-sm-between align-content-center">
                                <button type="submit" class="btn btn-default btn-sm "><i class="far fa-plus-square fa-2x"></i></button>
                                <a asp-action="Details" asp-route-id="@Model.TelevisaoId"><i class="far fa-caret-square-left fa-2x"></i></a>

                            </div>
                        </form>
                        <div style="color:darkgray">
                            <a>Os campos marcados com * são de preenchimento obrigatório</a>
                        </div>
                    </div>
                </div>
  


                @*@section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }*@
            </div>
        </div>
    </div>
</section>