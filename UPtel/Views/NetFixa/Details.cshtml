@model UPtel.Models.NetFixa

@{
    ViewData["Title"] = "Details";
}

<style>
    .btn-costum {
        background-color: #00b371;
        color: white;
        border-color: #009961;
    }

        .btn-costum:hover {
            background-color: #009961;
            color: white;
            border-color: #009961;
        }
</style>

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">

                <h1>Detalhes</h1>

                <div>
                    <h4>Net Fixa</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Limite)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Limite)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Velocidade)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Velocidade)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TipoConexao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TipoConexao)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.PrecoNetFixa)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PrecoNetFixa)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Notas)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Notas)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a class="btn btn-costum" asp-action="Edit" asp-route-id="@Model.NetFixaId">Editar</a> |
                    <a class="btn btn-outline-dark" asp-action="Index">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</section>