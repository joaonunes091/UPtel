@model IEnumerable<UPtel.Models.NetFixa>

@{
    ViewData["Title"] = "Index";
}

<style>
    .btn-costum {
        background-color: #00b371;
        color: white;
        border-color: #009961;
    }

    .btn-costum:hover {
        background-color: #009961;
        color: white;
        border-color: #009961;
    }
</style>

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8 text-white">

                <h1>Internet Fixa</h1>
                <br />
                <p>
                    <a class="btn btn-costum" asp-action="Create">Criar Novo</a>
                </p>
                <br />
                <table class="table text-white">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TipoConexao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Velocidade)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PrecoNetFixa)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoConexao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Velocidade)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PrecoNetFixa)
                            </td>
                            <td>
                                @*<a class="btn btn-costum" asp-action="Edit" asp-route-id="@item.NetFixaId">Editar</a>*@
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.NetFixaId">Detalhes</a>
                                @*<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.NetFixaId">Eliminar</a>*@
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>