@model UPtel.Models.Telefone

@{
    ViewData["Title"] = "Editar dados do telefone";
}

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">
                <h2>Editar dados do telefone</h2>

                <h4>Telefone</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="TelefoneId" />
                            <div class="form-group">
                                <label asp-for="Limite" class="control-label"></label>
                                <input asp-for="Limite" class="form-control" />
                                <span asp-validation-for="Limite" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PrecoMinutoNacional" class="control-label"></label>
                                <input asp-for="PrecoMinutoNacional" class="form-control" />
                                <span asp-validation-for="PrecoMinutoNacional" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PrecoMinutoInternacional" class="control-label"></label>
                                <input asp-for="PrecoMinutoInternacional" class="form-control" />
                                <span asp-validation-for="PrecoMinutoInternacional" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Voltar</a>
                </div>

                @*@section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }*@
            </div>
        </div>
    </div>
</section>