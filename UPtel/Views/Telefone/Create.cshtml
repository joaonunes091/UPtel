@model UPtel.Models.Telefone

@{
    ViewData["Title"] = "Create";
}
<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">
                <h2>Adicionar novo telefone</h2>

                <h4>Telefone</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Numero" class="control-label">Número de telefone *</label>
                                <input asp-for="Numero" class="form-control" />
                                <span asp-validation-for="Numero" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Limite" class="control-label">Limite *</label>
                                <input asp-for="Limite" class="form-control" />
                                <span asp-validation-for="Limite" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PrecoMinutoNacional" class="control-label">Preço por minuto de chamadas nacionais *</label>
                                <input asp-for="PrecoMinutoNacional" class="form-control" />
                                <span asp-validation-for="PrecoMinutoNacional" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PrecoMinutoInternacional" class="control-label">Preço por minuto de chamadas internacionais *</label>
                                <input asp-for="PrecoMinutoInternacional" class="form-control" />
                                <span asp-validation-for="PrecoMinutoInternacional" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PrecoPacoteTelefone" class="control-label">Preço do pacote de telefone *</label>
                                <input asp-for="PrecoPacoteTelefone" class="form-control" />
                                <span asp-validation-for="PrecoPacoteTelefone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Adicionar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
                <div>
                    <a>Os campos marcados com * são de preenchimento obrigatório</a>
                </div>
                <div>
                    <a asp-action="Index">Voltar</a>
                </div>

                @*@section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }*@
            </div>
        </div>
    </div>
</section>