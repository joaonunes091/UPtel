@model UPtel.Models.Pacotes

@{
    ViewData["Title"] = "Criar pacote de serviços";
}

<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 text-white">

                <h2 class="font">Criar pacote de serviços</h2>


                <br />
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="NomePacote" class="control-label">Nome do pacote *</label>
                                <input asp-for="NomePacote" class="form-control" placeholder="Ex: Premium"/>
                                <span asp-validation-for="NomePacote" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="TelevisaoId" class="control-label">Pacote de televisão *</label>
                                <select asp-for="TelevisaoId" class="form-control" asp-items="ViewBag.TelevisaoId"></select>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="TelemovelId" class="control-label">Pacote de telemóvel *</label>
                                <select asp-for="TelemovelId" class="form-control" asp-items="ViewBag.TelemovelId"></select>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="NetIfixaId" class="control-label">Pacote de internet fixa *</label>
                                <select asp-for="NetIfixaId" class="form-control" asp-items="ViewBag.NetIfixaId"></select>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="TelefoneId" class="control-label">Pacote de telefone *</label>
                                <select asp-for="TelefoneId" class="form-control" asp-items="ViewBag.TelefoneId"></select>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="NetMovelId" class="control-label">Pacote de internet móvel *</label>
                                <select asp-for="NetMovelId" class="form-control" asp-items="ViewBag.NetMovelId"></select>
                            </div>
                            <div class="form-group d-flex justify-content-sm-between align-content-center">
                                <button type="submit" class="btn btn-default btn-sm "><i class="far fa-plus-square fa-2x"></i></button>
                                <a asp-action="Index"><i class="far fa-caret-square-left  fa-2x"></i></a>
                            </div>
                        </form>
                        <div>
                            <a class="text-white">Os campos marcados com * são de preenchimento obrigatório</a>
                        </div>
                    </div>
                </div>

                @*@section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }*@
            </div>
        </div>
    </div>
</section>