@model UPtel.Models.Pacotes

@{
    ViewData["Title"] = "Editar pacotes de serviços";
}

<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">
                <h1 class="font">Editar pacotes de serviços</h1>

                <hr />
                <div class="row d-flex justify-content-center">
                    <div class="col-md-8 text-white">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="PacoteId" />
                            <div class="form-group">
                                <label asp-for="NomePacote" class="control-label" style="color:darkgray">Nome do pacote *</label>
                                <input asp-for="NomePacote" class="form-control" placeholder="Ex: Premium"/>
                                <span asp-validation-for="NomePacote" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PrecoTotal" class="control-label" style="color:darkgray">Preço total do pacote *</label>
                                <input asp-for="PrecoTotal" class="form-control" placeholder="Ex: 59"/>
                                <span asp-validation-for="PrecoTotal" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TelevisaoId" class="control-label" style="color:darkgray">Pacote de televisão *</label>
                                <select asp-for="TelevisaoId" class="form-control" asp-items="ViewBag.TelevisaoId"></select>
                                <span asp-validation-for="TelevisaoId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TelemovelId" class="control-label" style="color:darkgray">Pacote de telemóvel *</label>
                                <select asp-for="TelemovelId" class="form-control" asp-items="ViewBag.TelemovelId"></select>
                                <span asp-validation-for="TelemovelId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NetIfixaId" class="control-label" style="color:darkgray">Pacote de internet fixa *</label>
                                <select asp-for="NetIfixaId" class="form-control" asp-items="ViewBag.NetIfixaId"></select>
                                <span asp-validation-for="NetIfixaId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TelefoneId" class="control-label" style="color:darkgray">Pacote de telefone *</label>
                                <select asp-for="TelefoneId" class="form-control" asp-items="ViewBag.TelefoneId"></select>
                                <span asp-validation-for="TelefoneId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NetMovelId" class="control-label" style="color:darkgray">Pacote de internet móvel *</label>
                                <select asp-for="NetMovelId" class="form-control" asp-items="ViewBag.NetMovelId"></select>
                                <span asp-validation-for="NetMovelId" class="text-danger"></span>
                            </div>
                            <div class="form-group d-flex justify-content-sm-between align-content-center">
                                <button type="submit" class="btn btn-default btn-sm "><i class="far fa-plus-square fa-2x"></i></button>
                                <a asp-action="Details" asp-route-id="@Model.PacoteId"><i class="far fa-caret-square-left  fa-2x"></i></a>

                            </div>
                        </form>
                        <div style="color:darkgray">
                            <a>Os campos marcados com * são de preenchimento obrigatório</a>
                        </div>
                    </div>
                </div>



                @*@section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }*@
            </div>
        </div>
    </div>
</section>