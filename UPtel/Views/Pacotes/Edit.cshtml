@model UPtel.Models.Pacotes

@{
    ViewData["Title"] = "Editar pacotes de serviços";
}

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">
                <h2>Editar pacotes de serviços</h2>

                <h4>Pacotes</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="PacoteId" />
                            <div class="form-group">
                                <label asp-for="NomePacote" class="control-label"></label>
                                <input asp-for="NomePacote" class="form-control" />
                                <span asp-validation-for="NomePacote" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Preco" class="control-label"></label>
                                <input asp-for="Preco" class="form-control" />
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TelevisaoId" class="control-label"></label>
                                <select asp-for="TelevisaoId" class="form-control" asp-items="ViewBag.TelevisaoId"></select>
                                <span asp-validation-for="TelevisaoId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TelemovelId" class="control-label"></label>
                                <select asp-for="TelemovelId" class="form-control" asp-items="ViewBag.TelemovelId"></select>
                                <span asp-validation-for="TelemovelId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NetIfixaId" class="control-label"></label>
                                <select asp-for="NetIfixaId" class="form-control" asp-items="ViewBag.NetIfixaId"></select>
                                <span asp-validation-for="NetIfixaId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TelefoneId" class="control-label"></label>
                                <select asp-for="TelefoneId" class="form-control" asp-items="ViewBag.TelefoneId"></select>
                                <span asp-validation-for="TelefoneId" class="text-danger"></span>
                            </div>
                            @*<div class="form-group">
                                    <label asp-for="TelefoneId" class="control-label"></label>
                                    <input asp-for="TelefoneId" class="form-control" />
                                    <span asp-validation-for="TelefoneId" class="text-danger"></span>
                                </div>*@
                            <div class="form-group">
                                <label asp-for="NetMovelId" class="control-label"></label>
                                <select asp-for="NetMovelId" class="form-control" asp-items="ViewBag.NetMovelId"></select>
                                <span asp-validation-for="NetMovelId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Voltar</a>
                </div>

                @*@section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }*@
            </div>
        </div>
    </div>
</section>