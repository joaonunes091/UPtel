@*@model UPtel.Models.FaturaCliente*@

@model UPtel.Models.FaturaViewModel
@{
    ViewData["Title"] = "Details";
}

<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center  text-white">
            <div class="col-xl-8">
                <h2 class="font">Detalhes da fatura</h2>
                <br /><br />
                <dl class="row">
                    <dt class="col-sm-5 titulo">
                        @Html.DisplayNameFor(model => model.DataEmissao)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.DataEmissao)
                    </dd>
                    <dt class="col-sm-5 titulo">
                        @Html.DisplayNameFor(model => model.Morada)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Morada)
                    </dd>
                    <dt class="col-sm-5 titulo">
                        @Html.DisplayNameFor(model => model.NomeCliente)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.NomeCliente)
                    </dd>
                    <dt class="col-sm-5 titulo">
                        @Html.DisplayNameFor(model => model.PacoteId)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.NomePacote)
                    </dd>
                    <dt class="col-sm-5 titulo">
                        @Html.DisplayNameFor(model => model.PrecoContrato)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.PrecoContrato)
                    </dd>
                    <dt class="col-sm-5 titulo">
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>
                </dl>
                <br />
                <div class="float-right">
                    <a asp-action="Edit" asp-route-id="@Model.NrFaturaId"><i title="Editar" class="far fa-edit fa-2x"> &nbsp </i></a>
                    <a asp-action="Delete" asp-route-id="@Model.NrFaturaId"><i title="Apagar" class="far fa-trash-alt fa-2x imgEliminar"> &nbsp </i></a>
                    <a asp-action="Index"><i title="Voltar" class="far fa-arrow-alt-circle-left fa-2x"> &nbsp </i></a>
                </div>
            </div>
        </div>
    </div>
</section>

