@model UPtel.Models.FaturaCliente

@{
    ViewData["Title"] = "Delete";
}

<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">
                <h2 class="font">Tem a certeza que quer eliminar a fatura?</h2>
                <br />
                <div>
                    <div>

                        <dl class="row justify-content-center text-white">
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.DataEmissao)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.DataEmissao)
                            </dd>
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.Morada)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Morada)
                            </dd>
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.NomeCliente)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.NomeCliente)
                            </dd>
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.PacoteId)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.PacoteId)
                            </dd>
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.PrecoContrato)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.PrecoContrato)
                            </dd>
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.Descricao)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Descricao)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Fatura)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Fatura.CodigoPostalCont)
                            </dd>
                        </dl>
                    </div>
                </div>
                <br /><br />
                <form class="d-flex justify-content-sm-between align-content-center col-10" asp-action="Delete">
                    <input type="hidden" asp-for="NrFaturaId" />
                    <button type="submit" class="btn btn-default btn-sm "><i title="Eliminar" class="far fa-trash-alt fa-2x imgEliminar"></i></button>
                    <a asp-action="Details" asp-route-id="@Model.NrFaturaId"><i title="Voltar" class="far fa-arrow-alt-circle-left fa-2x"></i></a>
                </form>
            </div>
        </div>
    </div>
</section>

