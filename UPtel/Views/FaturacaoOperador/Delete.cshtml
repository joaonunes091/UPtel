@model UPtel.Models.FaturacaoOperador

@{
    ViewData["Title"] = "Delete";
}

<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">
                <h2 class="font">Tem a certeza que quer eliminar a fatura?</h2>
                <br />
                <div>
                    <div>
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Data)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Data)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ValorMensalFat)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ValorMensalFat)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.FuncinarioId)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.FuncinarioId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Mes)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Mes.MesId)
                            </dd>
                      </dl>
                    </div>
                </div>
            </div>
            <br /><br />
            <form class="d-flex justify-content-sm-between align-content-center col-10" asp-action="Delete">
                <input type="hidden" asp-for="FatOpId" />
                <button type="submit" class="btn btn-default btn-sm " asp-route-id="@Model.FatOpId"><i title="Eliminar" class="far fa-trash-alt fa-2x imgEliminar"></i></button>
                <a asp-action="Details" asp-route-id="@Model.FatOpId"><i title="Voltar" class="far fa-arrow-alt-circle-left fa-2x"></i></a>
            </form>
        </div>
    </div>
</section>