@model UPtel.Models.FaturacaoOperador

@{
    ViewData["Title"] = "Edit";
}

<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">
                <h2 class="font">Editar faturacao Operador</h2>
                <br />
                <div class="row d-flex justify-content-center">
                    <div class="col-md-8 text-white">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="FatOpId" />
                            <div class="form-group">
                                <label asp-for="Data" class="control-label"></label>
                                <input asp-for="Data" class="form-control" />
                                <span asp-validation-for="Data" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ValorMensalFat" class="control-label"></label>
                                <input asp-for="ValorMensalFat" class="form-control" />
                                <span asp-validation-for="ValorMensalFat" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MesId" class="control-label"></label>
                                <select asp-for="MesId" class="form-control" asp-items="ViewBag.MesId"></select>
                                <span asp-validation-for="MesId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FuncinarioId" class="control-label"></label>
                                <input asp-for="FuncinarioId" class="form-control" />
                                <span asp-validation-for="FuncinarioId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index"><i title="Voltar" class="far fa-caret-square-left fa-2x"> &nbsp </i></a>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
