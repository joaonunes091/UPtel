@model UPtel.Models.PacoteCanais

@{
    ViewData["Title"] = "Eliminar Pacote de Canais";
}

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8">
                <h2 class="text-left">Pacote de Canais</h2>

                <h3 class="text-left">Tem a certeza que pretencde eliminar o pacote de canais?</h3>
                <div>
                    <h4 class="text-left">Eliminar</h4>
                    <hr />
                    <dl class="row text-left">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Canais)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Canais.NomeCanal)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Televisao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Televisao.Nome)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="PacoteCanalId" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>