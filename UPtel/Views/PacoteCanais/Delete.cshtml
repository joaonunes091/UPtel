@model UPtel.Models.PacoteCanais

@{
    ViewData["Title"] = "Delete";
}

<section id="hero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <h1 class="display-4 text-center">UPtel</h1>
        <div class="row justify-content-center">
            <div class="col-xl-8">
                <h2>Pacote de Canais</h2>

                <h3>Tem a certeza que pretencde eliminar o pacote de canais?</h3>
                <div>
                    <h4>Eliminar</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Canais)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Canais.NomeCanal)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Televisao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Televisao.Nome)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="PacoteCanalId" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>