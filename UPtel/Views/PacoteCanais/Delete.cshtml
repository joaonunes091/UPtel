@model UPtel.Models.PacoteCanais

@{
    ViewData["Title"] = "Eliminar Pacote de Canais";
}

<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">

                <h3 class="font">Tem a certeza que pretende eliminar o pacote de canais?</h3>
                <br /><br />
                <div>
                    <dl class="row justify-content-center text-white">
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.Canais)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Canais.NomeCanal)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.Televisao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Televisao.Nome)
                        </dd>
                    </dl>

                    <form class="d-flex justify-content-sm-between align-content-center col-10" asp-action="Delete">
                        <input type="hidden" asp-for="PacoteCanalId" />
                        <button type="submit" class="btn btn-default btn-sm "><i class="far fa-trash-alt fa-2x imgEliminar"></i></button>
                        <a asp-action="Details" asp-route-id="@Model.PacoteCanalId"><i class="far fa-caret-square-left  fa-2x"></i></a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>