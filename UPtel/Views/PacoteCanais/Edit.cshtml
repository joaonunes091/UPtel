@model UPtel.Models.PacoteCanais

@{
    ViewData["Title"] = "Editar dos Pacotes de Canais";
}

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">
                <h2>Editar dos Pacotes de Canais</h2>

                <h4>PacoteCanais</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="PacoteCanalId" />
                            <div class="form-group">
                                <label asp-for="TelevisaoId" class="control-label"></label>
                                <select asp-for="TelevisaoId" class="form-control" asp-items="ViewBag.TelevisaoId"></select>
                                <span asp-validation-for="TelevisaoId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CanaisId" class="control-label"></label>
                                <select asp-for="CanaisId" class="form-control" asp-items="ViewBag.CanaisId"></select>
                                <span asp-validation-for="CanaisId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Voltar</a>
                </div>

                @*@section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }*@
            </div>
        </div>
    </div>
</section>