@model UPtel.Models.PacoteCanais

@{
    ViewData["Title"] = "Editar dos Pacotes de Canais";
}

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8 text-white">
                <h2>Editar dos Pacotes de Canais</h2>

                @*<h4>PacoteCanais</h4>*@
                <br />
                <div class="row text-white">
                    <div class="col-md-4">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="PacoteCanalId" />
                            <div class="form-group">
                                <label asp-for="TelevisaoId" class="control-label">Televisão *</label>
                                <select asp-for="TelevisaoId" class="form-control" asp-items="ViewBag.TelevisaoId"></select>
                                <span asp-validation-for="TelevisaoId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CanaisId" class="control-label">Canais *</label>
                                <select asp-for="CanaisId" class="form-control" asp-items="ViewBag.CanaisId"></select>
                                <span asp-validation-for="CanaisId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-costum" /> |
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@Model.PacoteCanalId">Voltar</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-white">
                    <a>Os campos marcados com * são de preenchimento obrigatório</a>
                </div>


                @*@section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }*@
            </div>
        </div>
    </div>
</section>