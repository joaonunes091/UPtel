@model UPtel.Models.PacoteCanais

@{
    ViewData["Title"] = "Editar dos Pacotes de Canais";
}

<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">

                <h2 class="font">Editar Pacotes de Canais</h2>

                <br />
                <div class="row d-flex justify-content-center">
                    <div class="col-md-8 text-white">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="PacoteCanalId" />
                            <div class="form-group">
                                <label asp-for="TelevisaoId" class="control-label" style="color:darkgray">Televisão *</label>
                                <select asp-for="TelevisaoId" class="form-control" asp-items="ViewBag.TelevisaoId"></select>
                                <span asp-validation-for="TelevisaoId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CanaisId" class="control-label" style="color:darkgray">Canais *</label>
                                <select asp-for="CanaisId" class="form-control" asp-items="ViewBag.CanaisId"></select>
                                <span asp-validation-for="CanaisId" class="text-danger"></span>
                            </div>
                            <div class="form-group d-flex justify-content-sm-between align-content-center">
                                <button type="submit" class="btn btn-default btn-sm "><i class="far fa-plus-square fa-2x"></i></button>
                                <a asp-action="Details" asp-route-id="@Model.PacoteCanalId"><i class="far fa-caret-square-left fa-2x"></i></a>

                            </div>
                        </form>
                        <div style="color:darkgray">
                            <a>Os campos marcados com * são de preenchimento obrigatório</a>
                        </div>
                    </div>
                </div>

                @*@section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }*@
            </div>
        </div>
    </div>
</section>