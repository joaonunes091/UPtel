@model UPtel.Models.PacoteCanais

@{
    ViewData["Title"] = "Criar pacote de canais";
}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 text-white">

                <h2 class="font">Criar pacote de canais</h2>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="TelevisaoId" class="control-label"></label>
                                <select asp-for="TelevisaoId" class="form-control" asp-items="ViewBag.TelevisaoId"></select>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="CanaisId" class="control-label"></label>
                                <select asp-for="CanaisId" class="form-control" asp-items="ViewBag.CanaisId"></select>
                            </div>
                            <div class="form-group d-flex justify-content-sm-between align-content-center">
                                <button type="submit" class="btn btn-default btn-sm "><i class="fas fa-folder-plus fa-3x"></i></button>
                                <a asp-action="Index"><i class="far fa-arrow-alt-circle-left fa-2x"></i></a>
                            </div>
                        </form>
                    </div>
                </div>


                @*@section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }*@
            </div>
        </div>
    </div>
</section>