@model UPtel.Models.PacoteCanais

@{
    ViewData["Title"] = "Criar";
}
<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8">
                <h2 class="text-left">Pacotes de Canais</h2>

                <h4 class="text-left">Criar novo pacote de canais</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4 text-left">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="TelevisaoId" class="control-label"></label>
                                <select asp-for="TelevisaoId" class="form-control" asp-items="ViewBag.TelevisaoId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="CanaisId" class="control-label"></label>
                                <select asp-for="CanaisId" class="form-control" asp-items="ViewBag.CanaisId"></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Voltar à lista de canais</a>
                </div>

                @*@section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }*@
            </div>
        </div>
    </div>
</section>