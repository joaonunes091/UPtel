@model UPtel.Models.PacoteCanais

@{
    ViewData["Title"] = "Detalhes dos Pacotes";
}

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8">
                <h2 class="text-left">Detalhes dos Pacotes de Canais</h2>

                <div>
                    <h4 class="text-left">PacoteCanais</h4>
                    <hr />
                    <dl class="row text-left">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Canais)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Canais.NomeCanal)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Televisao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Televisao.Nome)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.PacoteCanalId">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</section>