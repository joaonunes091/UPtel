@model UPtel.Models.Cargos

@{
    ViewData["Title"] = "Create";
}

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">
                <h1>Criar</h1>

                <h4>Cargos</h4>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="NomeCargo" class="control-label"></label>
                                <input asp-for="NomeCargo" class="form-control" />
                                <span asp-validation-for="NomeCargo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</section>
