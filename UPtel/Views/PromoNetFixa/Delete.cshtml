@model UPtel.Models.PromoNetFixa

@{
    ViewData["Title"] = "Delete";
}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">
                <h2 class="font">Tem a certeza que quer eliminar a promoção?</h2>
                <br />
                <div>
                    <div>
                        <br />
                        <dl class="row justify-content-center text-white">
                            <dt class="col-sm-7 titulo">
                                @Html.DisplayNameFor(model => model.Nome)
                            </dt>
                            <dd class=" col-sm-5">
                                @Html.DisplayFor(model => model.Nome)
                            </dd>
                            <dt class="col-sm-7 titulo">
                                @Html.DisplayNameFor(model => model.Limite)
                            </dt>
                            <dd class=" col-sm-5">
                                @Html.DisplayFor(model => model.Limite)
                            </dd>
                            <dt class="col-sm-7 titulo">
                                @Html.DisplayNameFor(model => model.Velocidade)
                            </dt>
                            <dd class=" col-sm-5">
                                @Html.DisplayFor(model => model.Velocidade)
                            </dd>
                            <dt class="col-sm-7 titulo">
                                @Html.DisplayNameFor(model => model.Descricao)
                            </dt>
                            <dd class=" col-sm-5">
                                @Html.DisplayFor(model => model.Descricao)
                            </dd>
                            <dt class="col-sm-7 titulo">
                                @Html.DisplayNameFor(model => model.DescontoPrecoTotal)
                            </dt>
                            <dd class=" col-sm-5">
                                @Html.DisplayFor(model => model.DescontoPrecoTotal)
                            </dd>
                            <dt class="col-sm-7 titulo">
                                @Html.DisplayNameFor(model => model.Estado)
                            </dt>
                            <dd class=" col-sm-5">
                                @Html.DisplayFor(model => model.Estado)
                            </dd>
                        </dl>
                    </div>
                </div>
                <br /><br />
                      <form class="d-flex justify-content-sm-between align-content-center col-10" asp-action="Delete">
                          <input type="hidden" asp-for="PromoNetFixaId" />
                          <button type="submit" class="btn btn-default btn-sm "><i title="Eliminar" class="far fa-trash-alt fa-2x imgEliminar"></i></button>
                          <a asp-action="Details" asp-route-id="@Model.PromoNetFixaId"><i title="Voltar" class="far fa-caret-square-left  fa-2x"></i></a>
                      </form>
            </div>
        </div>
    </div>
