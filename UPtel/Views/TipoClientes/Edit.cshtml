@model UPtel.Models.TipoClientes

@{
    ViewData["Title"] = "Editar tipo de cliente";
}
<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">
                <h2>Editar tipo de cliente</h2>

                @*<h4>Tipo de clientes</h4>*@
                <hr />
                <div class="row">
                    <div class="col-md-4 text-white">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="TipoClienteId" />
                            <div class="form-group">
                                <label asp-for="Designacao" class="control-label text-white">Designação *</label>
                                <input asp-for="Designacao" class="form-control" />
                                <span asp-validation-for="Designacao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                <a class="btn btn-costum" asp-action="Index">Voltar</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div>
                    <a>Os campos marcados com * são de preenchimento obrigatório</a>
                </div>
                @*@section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }*@
            </div>
        </div>
    </div>
</section>
