@model UPtel.Models.TipoClientes

@{
    ViewData["Title"] = "Create";
}
<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">
                <h2>Criar tipo de cliente</h2>

                @*<h4>Tipo de cliente</h4>*@
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Designacao" class="control-label text-white"></label>
                                <input asp-for="Designacao" class="form-control" />
                                <span asp-validation-for="Designacao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Criar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a class="btn btn-costum" asp-action="Index">Voltar</a>
                </div>

                @*@section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }*@
            </div>
        </div>
    </div>
</section>
