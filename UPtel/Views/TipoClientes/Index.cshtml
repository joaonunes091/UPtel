@model ListaCanaisViewModel

@{
    ViewData["Title"] = "Tipo de clientes";
}
<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">
                <h2>Tipo de clientes</h2>

                <p>
                    <a asp-action="Create">Adicionar tipo de cliente</a>
                </p>
                @if (Model.TipoClientes.Count() == 0)
                {
                    <p>Não existem dados para mostrar</p>
                }
                else
                {
                    <table class="table text-white">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TipoClientes[0].Designacao)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tipo in Model.TipoClientes)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => tipo.Designacao)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@tipo.TipoClienteId">Editar</a> |
                                        <a asp-action="Details" asp-route-id="@tipo.TipoClienteId">Detalhes</a> |
                                        <a asp-action="Delete" asp-route-id="@tipo.TipoClienteId">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</section>