@model UPtel.Models.Users

@{
    ViewData["Title"] = "Details";
}
<section id="secondhero">
    <div class="container ">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">

                <h2 class="font">Detalhes Cliente Individual</h2>

                <div class="row">
                    <br />
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.Nome)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Nome)
                            </dd>
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.Data)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Data)
                            </dd>
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.CartaoCidadao)
                            </dt>
                            @if (Model.CartaoCidadao == null)
                            {
                                <dd class="col-sm-7">
                                    n/a
                                </dd>
                            }
                            else
                            {
                                <dd class="col-sm-7">
                                    @Html.DisplayFor(model => model.CartaoCidadao)
                                </dd>
                            }
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.Contribuinte)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Contribuinte)
                            </dd>
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.Morada)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Morada)
                            </dd>
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.CodigoPostal)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.CodigoPostal)
                                -
                                @Html.DisplayFor(model => model.CodigoPostalExt)
                            </dd>
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.Telefone)
                            </dt>
                            @if (Model.Telefone == null)
                            {
                                <dd class="col-sm-7">
                                    n/a
                                </dd>
                            }
                            else
                            {
                                <dd class="col-sm-7">
                                    @Html.DisplayFor(model => model.Telefone)
                                </dd>
                            }
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.Telemovel)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Telemovel)
                            </dd>
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.DataRegisto)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.DataRegisto)
                            </dd>
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.Estado)
                            </dt>
                            @if (Model.Estado == null)
                            {
                                <dd class="col-sm-7">
                                    n/a
                                </dd>
                            }
                            else
                            {
                                <dd class="col-sm-7">
                                    @Html.DisplayFor(model => model.Estado)
                                </dd>
                            }
                            <dt class="col-sm-5 titulo">
                                @Html.DisplayNameFor(model => model.Tipo)
                            </dt>
                            <dd class="col-sm-7">
                                @Html.DisplayFor(model => model.Tipo.Tipo)
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-4">
                        <dl class="row">
                            <dd class="col-sm-7" style="width:150px;">
                                @if (Model.Fotografia != null)
                                {
                                    <img src="data:image/jpeg;base64, @Convert.ToBase64String(Model.Fotografia)" class="img-fluid" />
                                }
                                else
                                {
                                    <img src="~/bootstrap/assets/img/placeholder.png" class="img-fluid" />
                                }
                            </dd>
                        </dl>
                    </div>
                    <div>
                        <a asp-action="EditCliente" asp-route-id="@Model.UsersId"><i title="Editar" class="far fa-edit fa-2x"> &nbsp </i></a>
                        <a asp-action="Delete" asp-route-id="@Model.UsersId"><i title="Apagar" class="far fa-trash-alt fa-2x imgEliminar"> &nbsp </i></a>
                        <a asp-action="Index"><i title="Voltar" class="far fa-arrow-alt-circle-left fa-2x"> &nbsp </i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>