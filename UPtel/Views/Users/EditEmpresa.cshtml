@model UPtel.Models.Users

@{
    ViewData["Title"] = "Edit";
}
<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8 text-white">

                <h1>Editar user</h1>

               
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="EditEmpresa" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="UsersId" />
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Data" class="control-label"></label>
                                <input asp-for="Data" class="form-control" />
                                <span asp-validation-for="Data" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Contribuinte" class="control-label"></label>
                                <input asp-for="Contribuinte" class="form-control" />
                                <span asp-validation-for="Contribuinte" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Morada" class="control-label"></label>
                                <input asp-for="Morada" class="form-control" />
                                <span asp-validation-for="Morada" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CodigoPostal" class="control-label">Código Postal *</label>

                                <div class="form-row">
                                    <div class="col-md-4">
                                        <input asp-for="CodigoPostal" class="form-control" />
                                        <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                                    </div>
                                    -
                                    <div class="col-md-3">
                                        <input asp-for="CodigoPostalExt" class="form-control" />
                                        <span asp-validation-for="CodigoPostalExt" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Telefone" class="control-label"></label>
                                <input asp-for="Telefone" class="form-control" />
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Telemovel" class="control-label"></label>
                                <input asp-for="Telemovel" class="form-control" />
                                <span asp-validation-for="Telemovel" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Estado" class="control-label"></label>
                                <input asp-for="Estado" class="form-control" />
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="ficheiroFoto" class="control-label">Fotografia (especifique apenas caso queira alterar)</label>
                                <input name="ficheiroFoto" class="form-control-file" type="file" />
                            </div>
                            <div class="form-group">
                                <input asp-for="Fotografia" type="hidden" />
                                <input type="submit" value="Guardar" class="btn btn-costum" /> |
                                <a class="btn btn-info" asp-action="DetailsEmpresa" asp-route-id="@Model.UsersId">Voltar</a>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-3" style="width:50px;">
                        @if (Model.Fotografia != null)
                        {
                            <img src="data:image/jpeg;base64, @Convert.ToBase64String(Model.Fotografia)" class="img-fluid" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }
