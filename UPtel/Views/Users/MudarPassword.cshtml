@model MudarPasswordViewModel

<h2>Mudar Password</h2>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PasswordAtual"></label>
                <input asp-for="PasswordAtual" class="form-control" />
                <span asp-validation-for="PasswordAtual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordNova"></label>
                <input asp-for="PasswordNova" class="form-control" />
                <span asp-validation-for="PasswordNova" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmarPassword"></label>
                <input asp-for="ConfirmarPassword" class="form-control" />
                <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Alterar</button>
        </form>
    </div>
</div>