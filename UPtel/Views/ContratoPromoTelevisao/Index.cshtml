@model IEnumerable<UPtel.Models.ContratoPromoTelevisao>

@{
    ViewData["Title"] = "Index";
}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">
                <h1>ContratosPromoTelevisao</h1>

                <p>
                    <a asp-action="Create">Create New</a>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DataInicio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DataFim)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Contratos)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PromoTelevisao)
                            </th>
                            <th>
                                Detalhes
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataInicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataFim)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Contratos.ContratoId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PromoTelevisao.PromoTelevisaoId)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ContratoTelevisaoId">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.ContratoTelevisaoId">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.ContratoTelevisaoId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>