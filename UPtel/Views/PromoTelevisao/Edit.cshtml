@model UPtel.Models.PromoTelevisao

@{
    ViewData["Title"] = "Edit";
}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">
                <h2 class="font">Editar Promoção de Internet Fixa</h2>
                <br />
                <div class="row">
                    <div class="col-md-8 text-white">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="PromoTelevisaoId" />
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CanaisGratis" class="control-label"></label>
                                <input asp-for="CanaisGratis" class="form-control" />
                                <span asp-validation-for="CanaisGratis" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DescontoPrecoTotal" class="control-label"></label>
                                <input asp-for="DescontoPrecoTotal" class="form-control" />
                                <span asp-validation-for="DescontoPrecoTotal" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Descricao" class="control-label" style="color:darkgray">Descrição da Promoção</label>
                                <textarea rows="3" asp-for="Descricao" placeholder="Descrição" class="form-control"></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="form-group d-flex justify-content-sm-between align-content-center">
                                <button type="submit" class="btn btn-default btn-sm "><i title="Guardar" class="fas fa-folder-plus fa-3x"></i></button>
                                <a asp-action="Details" asp-route-id="@Model.PromoTelevisaoId"><i title="Voltar" class="far fa-arrow-alt-circle-left fa-2x"></i></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
