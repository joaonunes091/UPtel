@model UPtel.Models.PromoTelevisao

@{
    ViewData["Title"] = "Delete";
}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">
                <h2 class="font">Tem a certeza que quer eliminar a promoção?</h2>
                <br />
                <div>
                    <br />
                    <dl class="row justify-content-center text-white">
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.CanaisGratis)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.CanaisGratis)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.DescontoPrecoTotal)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.DescontoPrecoTotal)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                    </dl>
                    <br /><br />
                    <form class="d-flex justify-content-sm-between align-content-center col-10" asp-action="Delete">
                        <input type="hidden" asp-for="PromoTelevisaoId" />
                        <button type="submit" class="btn btn-default btn-sm "><i title="Eliminar" class="far fa-trash-alt fa-2x imgEliminar"></i></button>
                        <a asp-action="Details" asp-route-id="@Model.PromoTelevisaoId"><i title="Voltar" class="far fa-arrow-alt-circle-left fa-2x"></i></a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>