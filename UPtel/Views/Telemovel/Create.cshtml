@model UPtel.Models.Telemovel

@{
    ViewData["Title"] = "Adicionar novo telemóvel";
}
<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 text-white">

                <h2 class="font">Adicionar novo telemóvel</h2>

                <br />
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="Nome" class="control-label">Tarifário *</label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="LimiteMinutos" class="control-label">Limite de minutos *</label>
                                <input asp-for="LimiteMinutos" class="form-control" />
                                <span asp-validation-for="LimiteMinutos" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="LimiteSms" class="control-label">Limite de SMS *</label>
                                <input asp-for="LimiteSms" class="form-control" />
                                <span asp-validation-for="LimiteSms" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="PrecoMinutoNacional" class="control-label">Preço por minuto de chamadas nacionais *</label>
                                <input asp-for="PrecoMinutoNacional" class="form-control" />
                                <span asp-validation-for="PrecoMinutoNacional" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="PrecoMinutoInternacional" class="control-label">Preço por minuto de chamadas internacionais *</label>
                                <input asp-for="PrecoMinutoInternacional" class="form-control" />
                                <span asp-validation-for="PrecoMinutoInternacional" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="PrecoSms" class="control-label">Preço de SMS nacional *</label>
                                <input asp-for="PrecoSms" class="form-control" />
                                <span asp-validation-for="PrecoSms" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="PrecoMms" class="control-label">Preço de MMS nacional *</label>
                                <input asp-for="PrecoMms" class="form-control" />
                                <span asp-validation-for="PrecoMms" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="PrecoPacoteTelemovel" class="control-label">Preço do pacote de telemóvel *</label>
                                <input asp-for="PrecoPacoteTelemovel" class="form-control" />
                                <span asp-validation-for="PrecoPacoteTelemovel" class="text-danger"></span>
                            </div>
                            <div class="form-group d-flex justify-content-sm-between align-content-center">
                                <button type="submit" class="btn btn-default btn-sm "><i class="fas fa-folder-plus fa-3x"></i></button>
                                <a asp-action="Index"><i class="far fa-arrow-alt-circle-left fa-2x"></i></a>

                            </div>
                        </form>
                        <div style="color:darkgray">
                            <a>Os campos marcados com * são de preenchimento obrigatório</a>
                        </div>
                    </div>
                </div>


                @*@section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }*@
            </div>
        </div>
    </div>
</section>