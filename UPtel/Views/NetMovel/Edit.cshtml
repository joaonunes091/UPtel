@model UPtel.Models.NetMovel

@{
    ViewData["Title"] = "Edit";
}

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8 text-white">

                <h2>Editar pacote internet móvel</h2>
                <hr />
                <div class="row">
                    <div class="col-md-4 text-white">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="NetMovelId" />
                            <div class="form-group">
                                <label asp-for="Limite" class="control-label text-white">Limite *</label>
                                <input asp-for="Limite" class="form-control" />
                                <span asp-validation-for="Limite" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PrecoNetMovel" class="control-label text-white">Preço do tarifário *</label>
                                <input asp-for="PrecoNetMovel" class="form-control" />
                                <span asp-validation-for="PrecoNetMovel" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Numero" class="control-label text-white">Número de telemóvel *</label>
                                <input asp-for="Numero" class="form-control" />
                                <span asp-validation-for="Numero" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Notas" class="control-label text-white"></label>
                                <input asp-for="Notas" class="form-control" />
                                <span asp-validation-for="Notas" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-costum" />
                                <a class="btn btn-info" asp-action="Index">Voltar</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-white">
                    <a>Os campos marcados com * são de preenchimento obrigatório</a>
                </div>
    

                @*@section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }*@

            </div>
        </div>
    </div>
</section>