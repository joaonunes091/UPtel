@model UPtel.Models.Contratos

@{
    ViewData["Title"] = "Create";
}

<style>
    .btn-costum {
        background-color: #00b371;
        color: white;
        border-color: #009961;
    }

        .btn-costum:hover {
            background-color: #009961;
            color: white;
            border-color: #009961;
        }
</style>

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">

                <h1>Novo Contrato</h1>

                <div class="row">
                    <div class="col-md-6">
                        <hr />
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ClienteId" class="control-label"></label>
                                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="FuncionarioId" class="control-label"></label>
                                <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.FuncionarioId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="PromocaoId" class="control-label"></label>
                                <select asp-for="PromocaoId" class="form-control" asp-items="ViewBag.PromocaoId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="PacoteId" class="control-label"></label>
                                <select asp-for="PacoteId" class="form-control" asp-items="ViewBag.PacoteId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="DataInicio" class="control-label"></label>
                                <input asp-for="DataInicio" class="form-control" />
                                <span asp-validation-for="DataInicio" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Fidelizacao" class="control-label"></label>
                                <input asp-for="Fidelizacao" class="form-control" />
                                <span asp-validation-for="Fidelizacao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TempoPromocao" class="control-label"></label>
                                <input asp-for="TempoPromocao" class="form-control" />
                                <span asp-validation-for="TempoPromocao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PrecoContrato" class="control-label"></label>
                                <input asp-for="PrecoContrato" class="form-control" />
                                <span asp-validation-for="PrecoContrato" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a class="btn btn-outline-dark" asp-action="Index">Voltar</a>
                </div>

            </div>
        </div>
    </div>
</section>
