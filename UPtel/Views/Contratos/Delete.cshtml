@model UPtel.Models.Contratos

@{
    ViewData["Title"] = "Delete";
}

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">

                <h1>Eliminar</h1>

                <h3>Tem a certeza que quer eliminar?</h3>
                <div>
                    <h4>Contratos</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DataInicio)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DataInicio)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Fidelizacao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Fidelizacao)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TempoPromocao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TempoPromocao)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NomeCliente)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NomeCliente)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NomePacote)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NomePacote)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NomePromocao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NomePromocao)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NomeFuncionario)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NomeFuncionario)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.PrecoContrato)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PrecoContrato)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Cliente)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cliente.CartaoCidadao)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Funcionario)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Funcionario.CartaoCidadao)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Pacote)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Pacote.NomePacote)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Promocao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Promocao.Descricao)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ContratoId" />
                        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                        <a class="btn btn-outline-dark" asp-action="Index">Voltar</a>
                    </form>
                </div>
            </div>
        </div>  
    </div>  
</section>