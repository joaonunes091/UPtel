@model UPtel.Models.Contratos

@{
    ViewData["Title"] = "Eliminar contrato";
}

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8 text-white">
                <h2>Tem a certeza que quer eliminar o contrato?</h2>
                <br />
                <div>
                    <dl class="row">
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.DataInicio)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.DataInicio)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Fidelizacao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Fidelizacao)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.TempoPromocao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.TempoPromocao)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.PrecoContrato)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.PrecoContrato)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Cliente)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Cliente.NomeCliente)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Funcionario)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Funcionario.NomeFuncionario)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Pacote)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Pacote.NomePacote)
                        </dd>
                        <dt class="col-sm-5">
                            @Html.DisplayNameFor(model => model.Promocao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Promocao.Descricao)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ContratoId" />
                        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                        <a class="btn btn-info" asp-action="Index">Voltar</a>
                    </form>
                </div>
            </div>
        </div>  
    </div>  
</section>