@model UPtel.Models.Promocoes

@{
    ViewData["Title"] = "Criar promoção";
}

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8 text-white">

                <h2>Criar promoção</h2>

            
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="NomePromocao" class="control-label">Nome da promoção *</label>
                                <input asp-for="NomePromocao" class="form-control" />
                                <span asp-validation-for="NomePromocao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Descricao" class="control-label">Descrição *</label>
                                <input asp-for="Descricao" class="form-control" />
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PromoCanais" class="control-label"></label>
                                <input asp-for="PromoCanais" class="form-control" />
                                <span asp-validation-for="PromoCanais" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Desconto" class="control-label"></label>
                                <input asp-for="Desconto" class="form-control" />
                                <span asp-validation-for="Desconto" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Criar" class="btn btn-costum" />
                                <a class="btn btn-info" asp-action="Index">Voltar</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-white">
                    <a>Os campos marcados com * são de preenchimento obrigatório</a>
                </div>
    

                @*@section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }*@
            </div>
        </div>
    </div>
</section>