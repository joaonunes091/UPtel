@model UPtel.Models.Promocoes

@{
    ViewData["Title"] = "Criar promoção";
}

<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 text-white">

                <h2 class="font">Criar promoção</h2>


                <br />
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="NomePromocao" class="control-label">Nome da promoção *</label>
                                <input asp-for="NomePromocao" class="form-control" />
                                <span asp-validation-for="NomePromocao" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="Descricao" class="control-label">Descrição *</label>
                                <input asp-for="Descricao" class="form-control" />
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="PromoCanais" class="control-label"></label>
                                <input asp-for="PromoCanais" class="form-control" />
                                <span asp-validation-for="PromoCanais" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="color:darkgray">
                                <label asp-for="Desconto" class="control-label"></label>
                                <input asp-for="Desconto" class="form-control" />
                                <span asp-validation-for="Desconto" class="text-danger"></span>
                            </div>
                            <div class="form-group d-flex justify-content-sm-between align-content-center">
                                <button type="submit" class="btn btn-default btn-sm "><i class="fas fa-folder-plus fa-3x"></i></button>
                                <a asp-action="Index"><i class="far fa-arrow-alt-circle-left fa-2x"></i></a>

                            </div>
                        </form>
                        <div style="color:darkgray">
                            <a>Os campos marcados com * são de preenchimento obrigatório</a>
                        </div>
                    </div>
                </div>



                @*@section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }*@
            </div>
        </div>
    </div>
</section>