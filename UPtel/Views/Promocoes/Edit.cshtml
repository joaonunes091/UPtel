@model UPtel.Models.Promocoes

@{
    ViewData["Title"] = "Editar Promoção";
}

<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 text-white">

                <h1 class="font">Editar Promoção</h1>

                <br />
                <div class="row d-flex justify-content-center">
                    <div class="col-md-8 text-white">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="PromocaoId" />
                            <div class="form-group">
                                <label asp-for="NomePromocao" class="control-label" style="color:darkgray">Nome da promoção *</label>
                                <input asp-for="NomePromocao" class="form-control" placeholder="Ex: VIP"/>
                                <span asp-validation-for="NomePromocao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Descricao" class="control-label" style="color:darkgray">Descrição *</label>
                                <textarea rows="3" asp-for="Descricao" placeholder="Ex. Descritivo da promoção" class="form-control"></textarea>
                                <input asp-for="Descricao" class="form-control" />
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PromoCanais" class="control-label" style="color:darkgray"></label>
                                <input asp-for="PromoCanais" class="form-control" placeholder="Ex. Promoção de canais"/>
                                <span asp-validation-for="PromoCanais" class="text-danger"></span> 
                            </div>
                            <div class="form-group">
                                <label asp-for="Desconto" class="control-label" style="color:darkgray"></label>
                                <input asp-for="Desconto" class="form-control" placeholder="Ex. Desconto "/>
                                <span asp-validation-for="Desconto" class="text-danger"></span>
                            </div>
                            <div class="form-group d-flex justify-content-sm-between align-content-center">
                                <button type="submit" class="btn btn-default btn-sm "><i class="fas fa-folder-plus fa-3x"></i></button>
                                <a asp-action="Details" asp-route-id="@Model.PromocaoId"><i class="far fa-arrow-alt-circle-left fa-2x"></i></a>
                            </div>
                        </form>
                        <div style="color:darkgray">
                            <a>Os campos marcados com * são de preenchimento obrigatório</a>
                        </div>
                    </div>
                </div>
                @*@section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }*@
            </div>
        </div>
    </div>
</section>