@model IEnumerable<UPtel.Models.Promocoes>

@{
    ViewData["Title"] = "Promoções";
}

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">
                <h2>Promoções</h2>

                <p>
                    <a asp-action="Create">Criar nova promoção</a>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NomePromocao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomePromocao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td class="text-right">
                                    <a asp-action="Edit" asp-route-id="@item.PromocaoId">Editar</a> |
                                    <a asp-action="Details" asp-route-id="@item.PromocaoId">Detalhes</a> |
                                    <a asp-action="Delete" asp-route-id="@item.PromocaoId">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>