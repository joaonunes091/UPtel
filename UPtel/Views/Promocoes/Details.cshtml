@model UPtel.Models.Promocoes

@{
    ViewData["Title"] = "Detalhes da promoção";
}

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8 text-white">

                <h1>Detalhes da promoção</h1>

                <div>
                    <br />
                    <dl class="row">
                        <dt class="col-sm-2 text-white">
                            @Html.DisplayNameFor(model => model.NomePromocao)
                        </dt>
                        <dd class="col-sm-10 text-white">
                            @Html.DisplayFor(model => model.NomePromocao)
                        </dd>
                        <dt class="col-sm-2 text-white">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-10 text-white">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                        <dt class="col-sm-2 text-white">
                            @Html.DisplayNameFor(model => model.PromoCanais)
                        </dt>
                        <dd class="col-sm-10 text-white">
                            @Html.DisplayFor(model => model.PromoCanais)
                        </dd>
                        <dt class="col-sm-2 text-white">
                            @Html.DisplayNameFor(model => model.Desconto)
                        </dt>
                        <dd class="col-sm-10 text-white">
                            @Html.DisplayFor(model => model.Desconto)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.PromocaoId" class="btn btn-costum">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@Model.PromocaoId" class="btn btn-danger">Eliminar</a> |
                    <a asp-action="Index" class="btn btn-info">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</section>