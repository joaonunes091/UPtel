@model UPtel.Models.Promocoes

@{
    ViewData["Title"] = "Detalhes da promoção";
}

<section id="secondhero" class="d-flex flex-column justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-left">
            <div class="col-xl-8">
                <h2>Detalhes da promoção</h2>

                <div>
                    <h4>Promoções</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NomePromocao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NomePromocao)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.PromocaoId">Editar</a> |
                    <a asp-action="Index">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</section>