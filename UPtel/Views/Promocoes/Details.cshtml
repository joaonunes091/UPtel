@model UPtel.Models.Promocoes

@{
    ViewData["Title"] = "Detalhes da promoção";
}

<section id="secondhero">
    <div class="container">
        <div class="row justify-content-center  text-white">
            <div class="col-xl-8">

                <h1 class="font">Detalhes da promoção</h1>

                <div>
                    <br />
                    <dl class="row d-flex justify-content-center text-center">
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.NomePromocao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.NomePromocao)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            @Html.DisplayNameFor(model => model.PromoCanais)
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.PromoCanais)
                        </dd>
                        <dt class="col-sm-5 titulo">
                            Desconto em %
                        </dt>
                        <dd class="col-sm-7">
                            @Html.DisplayFor(model => model.Desconto)
                        </dd>
                    </dl>
                </div>
                @if (User.IsInRole("Administrador"))
                {
                    <div class="float-right">
                        <a asp-action="Edit" asp-route-id="@Model.PromocaoId"><i class="far fa-edit fa-2x"> &nbsp </i></a>
                        <a asp-action="Delete" asp-route-id="@Model.PromocaoId"><i class="far fa-trash-alt fa-2x imgEliminar"> &nbsp </i></a>
                        <a asp-action="Index"><i class="far fa-arrow-alt-circle-left fa-2x"> &nbsp </i></a>
                    </div>
                }
                else
                {
                    <div class="float-right">
                        <a asp-action="Index"><i class="far fa-arrow-alt-circle-left fa-2x"> &nbsp </i></a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>