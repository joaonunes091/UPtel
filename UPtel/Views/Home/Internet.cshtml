    ViewData["Title"] = "Internet";
}

<section id="secondhero">
    <div class="leftPanel">

        <img src="~/bootstrap/assets/img/PromoNetFixa.png" style="width:100%; height:100vh; padding-left:10%; padding-top:10%;" />
    </div>
    <div class="rightPanel">
        <img src="~/bootstrap/assets/img/PromoAniv.png" style="width:100%; height:100vh; padding-right:10%; padding-top:10%" />
